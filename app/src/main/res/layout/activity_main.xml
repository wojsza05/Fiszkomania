<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#8B00CACA">
    <Button
            android:background="@drawable/button_border"
            android:text="Dodaj fiszki"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/dodajFiszki"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="44dp"
            android:textSize="22dp"
            app:layout_constraintBottom_toTopOf="@+id/mojeSlowka"
            app:layout_constraintHorizontal_bias="0.502"
            android:onClick="dodaj"
    />

    <Button
            android:background="@drawable/button_border"
            android:text="Ucz się"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/uczSie"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="112dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="22dp"
            app:layout_constraintHorizontal_bias="0.503"
            android:onClick="uczSie"
    />

    <Button
            android:background="@drawable/button_border"
            android:text="Moje słówka"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/mojeSlowka"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="44dp"
            android:textSize="22dp"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintBottom_toTopOf="@+id/uczSie"
            android:onClick="baza"
    />
    <TextView
            android:text="Fiszkomania"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:id="@+id/tytul"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="44dp"
            android:textStyle="bold"
            android:textColor="#FD0404" style="@android:style/Widget.Holo.Light.TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    />
</android.support.constraint.ConstraintLayout>