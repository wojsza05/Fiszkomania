<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".DodajActivity"
        android:background="#8B00CACA"
>

    <TextView
            android:text="Angielskie słowo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tekst1" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="88dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textSize="30sp" android:textColor="#FFFFFF" android:textStyle="bold" android:textAllCaps="false"
            app:layout_constraintHorizontal_bias="0.496"/>
    <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/napisAngielski" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/tekst1"
            android:textColor="#000000" android:background="#00C48484" android:textSize="30sp"
    />
    <TextView
            android:text="Polskie tłumaczenie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tekst2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintTop_toBottomOf="@+id/napisAngielski"
            android:layout_marginTop="32dp" android:textSize="30sp" android:textColor="#FFFFFF"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/polSlowo" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/tekst2"
            android:textColor="#000000" android:background="#00C48484" android:textSize="30sp"
    />
    <Button
            android:background="@drawable/button_border"
            android:text="DODAJ"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/dodaj_BT" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textSize="30sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/polSlowo"
            app:layout_constraintHorizontal_bias="0.497"
            android:onClick="dodawanie_fiszek"
    />
    <Button
            android:background="@drawable/button_border"
            android:text="Powrót do strony głównej"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/menu_BT" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="menu1"
    />
</android.support.constraint.ConstraintLayout>